      "source": [
        "def display_topics(model, feature_names, num_top_words):\n",
        "    for topic_idx, topic in enumerate(model.components_):\n",
        "        print(f\"\\nTopic {topic_idx + 1}:\")\n",
        "        print(\" \".join(\n",
        "            [feature_names[i]\n",
        "             for i in topic.argsort()[:-num_top_words - 1:-1]]\n",
        "        ))"
      ],
      "metadata": {
        "id": "XQRDcbTHkDUi"
      },
      "execution_count": 25,
      "outputs": []
    },
